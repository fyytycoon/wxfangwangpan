/**index.wxss**/

page {
  -webkit-font-smoothing: antialiased;
    font-family: PingFangSC-Regular;
    -webkit-text-size-adjust: none;
  
}

wux-tabs {
  height: 7vh;
}
.navigator {
  height: 9vh;
}

.cells_after-title {
  height: 9vh;
}

._cell {
  height: 7vh;
  padding: 1vh 5vw;
}

._cell__bd{
  position: fixed;
  top: 2vh;
  left: 20vw;
font-size: 2vh;
font-weight: 600;
}
.bottomfloatclass {
  width: 100%;
  height: 7vh;
  background-color: #fff;
  left: 0;
  top: 93vh;
  position: fixed;
  z-index: 100;
  float: left;
}
.userinfo-container {
    height: 390rpx;
    overflow: hidden;
    position: relative;
}
.userinfo-circle-bg {
    top: -1500rpx;
    width: 1800rpx;
    height: 1800rpx;
    position: absolute;
    background: #ff6b6b;
    border-radius: 50%;
}
.userinfo-avatar[size] {
  width: 160rpx;
}
.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin-top: 24rpx;
    margin-bottom: 20rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    position: absolute;
    z-index: 10;
    display: flex; 
    background-size: cover;
}

.userinfo-square-bg {
    height: 260rpx;
    width: 702rpx;
    background: #fff;
    text-align: center;
    z-index: 1;
    top: 108rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.08);
}
.userinfo-info-list {
    height: 98rpx;
    display: flex;
    justify-content: space-around;
}
.userinfo-info-username {
    margin-top: 94rpx;
    margin-bottom: 12rpx;
    font-size: 32rpx;
}
.userinfo-info-item {
    text-align: center;
}
.userinfo-info-item-name {
    display: block;
    color: #8a8a8a;
    font-size: 26rpx;
}
.userinfo-info-item-value {
    -webkit-font-smoothing: antialiased;
    font-family: PingFangSC-Medium;
    -webkit-text-size-adjust: none;
    display: block;
    font-size: 34rpx;
}